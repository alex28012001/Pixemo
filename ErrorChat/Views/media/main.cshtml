@{ 
    ViewBag.Title = "Удивительные изображения Pixemo";
}
<div id="headerImg" class="container-fliud dl-horizontal">
    <div class="container dl-horizontal">
        <div class="search-form">
            <center>

                <h1><span class="hide-sm">Pixemo |</span> Удивительные изображения</h1>
                <h2>@Html.ActionLink("Реклама на любом изображении всего за 3$ в месяц", "advertisinginfo", "relation") </h2>


                <div class="input-group input-group-lg">
                    <div class="input-group-btn" style="width:1%">
                        <button type="button" class="btn btn-default" id="sendQuery">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </div>

                    <input type="text" class="form-control" style="max-width:none" id="query" placeholder="Введите запрос.." />

                    <div class="input-group-btn" style="width:1%">
                        <button type="button" id="media-type" value="Images" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                            <span class="hide-sm">Images</span>
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu pull-right" style="text-align:left" role="menu">
                            <li><span class="tab">Images</span></li>
                            <li class="divider"></li>
                            <li><span class="tab">Video</span></li>
                        </ul>
                    </div>
                </div>
            </center>
        </div>

    </div>
</div>

<center>
    <br />
    <div class="btn-group btn-group-lg">
        <input type="submit" class="btn btn-default" id="searchVideos" value="Video" />
        <input type="submit" class="btn btn-default active" id="searchImages" value="Images" />
    </div>
</center>

<div id="Result" class="containerImages"></div>
<center>
    <div class="loader" style="float:none">
        <div class="spinner"></div>
    </div>
</center>


@section scripts{
    @Scripts.Render("~/bundles/main")
}

    



