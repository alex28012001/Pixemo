@*Model - ссылка на сайт рекламы (или еще чего - то )*@
<div style="margin:15px 0px">
        <div class="form-group">
            <input type="file" id="uploadFile" multiple="multiple" class="form-control " /><br />
            @if (Model != null)
            {
                <input type="text" id="advertisingLink" value="@Model" disabled="disabled" class="form-control" />
            }
            else
            {
                <input type="text" id="advertisingLink" placeholder="Url вашей рекламы" class="form-control" />
            }

        </div>
        <input type="submit" value="Upload" id="uploadImage" class="btn btn-success" />    
</div>

<script src="~/Scripts/upload-advertising.js"></script>


